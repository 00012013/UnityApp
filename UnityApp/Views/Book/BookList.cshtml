<!-- Views/Book/Index.cshtml -->
@model IEnumerable<Book>

<p>
    <a class="btn btn-success" href="@Url.Action("Create", "Book")">Add Book</a>
</p>
<h2>Books</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Publish Year</th>
            <th>AuthorId</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.PublishYear</td>
                <td>@book.AuthorId</td>
                <td>
                    <a href="@Url.Action("Edit", "Book", new { id = book.Id })">Edit</a> |
                    <form asp-action="DeleteBook" asp-controller="Book" method="post" onsubmit="return confirm('Are you sure you want to delete this book?');">
                        <input type="hidden" name="id" value="@book.Id" />
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
